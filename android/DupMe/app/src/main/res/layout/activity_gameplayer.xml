            android:layout_width="wrap_content"
            android:text="d"
            android:id="@+id/d"
            android:layout_weight="1"
            android:layout_height="200dp"/>
        <Button
            android:layout_width="wrap_content"
            android:text="e"
            android:id="@+id/e"
            android:layout_weight="1"
            android:layout_height="200dp"/>
        <Button
            android:layout_width="wrap_content"
            android:text="f"
            android:id="@+id/f"
            android:layout_weight="1"
            android:layout_height="200dp"/>
        <Button
            android:layout_width="wrap_content"
            android:text="g"
            android:id="@+id/g"
            android:layout_weight="1"
            android:layout_height="200dp"/>
        <Button
            android:layout_width="wrap_content"
            android:text="a"
            android:id="@+id/a"
            android:layout_weight="1"
            android:layout_height="200dp"/>
        <Button
            android:layout_width="wrap_content"
            android:text="b"
            android:id="@+id/b"
            android:layout_weight="1"
            android:layout_height="200dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>